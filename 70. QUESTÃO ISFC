#include <stdio.h>

int main() {
    int numero;

    // Leitura do número
    printf("Digite um número: ");
    scanf("%d", &numero);

    // Verificando se o número é par
    if (numero % 2 == 0) {
        printf("Verdadeiro (o número é par)\n");
    } else {
        printf("Falso (o número não é par)\n");
    }

    return 0;
}
